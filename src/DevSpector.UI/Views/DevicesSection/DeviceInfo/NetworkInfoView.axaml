<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:l="clr-namespace:DevSpector.Desktop.UI.Localization"
        x:Class="DevSpector.Desktop.UI.Views.NetworkInfoView">
		<StackPanel>
			<!-- <TextBlock Text="{x:Static l:Messages.NetworkName}" Classes="note" /> -->
			<TextBlock Text="Сетевое имя" Classes="note" />
			<TextBox Text="{Binding NetworkName}" Classes="main" />
			<!-- <TextBlock Text="{x:Static l:Messages.IPAddresses}" Classes="note" /> -->
			<TextBlock Text="IP-адреса" Classes="note" />
			<ListBox Items="{Binding IPAddresses}" SelectedItem="{Binding SelectedIP}" />
		</StackPanel>
</UserControl>
