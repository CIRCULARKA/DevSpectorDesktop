<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:l="clr-namespace:DevSpector.Desktop.UI.Localization"
	x:Class="DevSpector.Desktop.UI.Views.CommonInfoView">
	<StackPanel>
		<!-- <TextBlock Text="{x:Static l:Messages.InventoryNumber}" Classes="note" /> -->
		<TextBlock Text="Инвентарный номер" Classes="note" />
		<TextBox Text="{Binding InventoryNumber}" Classes="main" />
		<!-- <TextBlock Text="{x:Static l:Messages.Type}" Classes="note" /> -->
		<TextBlock Text="Модель" Classes="note" />
		<TextBox Text="{Binding ModelName}" Classes="main" />
		<TextBlock Text="Тип" Classes="note" />
		<ComboBox
			Items="{Binding DeviceTypes}"
			SelectedItem="{Binding SelectedDeviceType}"
			Margin="0 0 0 10">
			<ComboBox.DataTemplates>
				<DataTemplate>
					<StackPanel>
						<TextBlock FontSize="15" Text="{Binding Name}" />
					</StackPanel>
				</DataTemplate>
			</ComboBox.DataTemplates>
		</ComboBox>
		<Button
			Command="{Binding ApplyChangesCommand}"
			Content="Применить" />
	</StackPanel>
</UserControl>
