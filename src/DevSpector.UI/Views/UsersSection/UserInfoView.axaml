<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:shared="using:DevSpector.Desktop.UI.Views.Shared"
	xmlns:ms="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
	xmlns:l="clr-namespace:DevSpector.Desktop.UI.Localization"
	x:Class="DevSpector.Desktop.UI.Views.UserInfoView">
	<StackPanel>
		<!-- <TextBlock Text="{x:Static l:Messages.Login}" Classes="note" /> -->
		<TextBlock Text="Логин" Classes="note" />
		<TextBlock Text="{Binding Login}" Classes="main" />
		<!-- <TextBlock Text="{x:Static l:Messages.Role}" Classes="note" /> -->
		<TextBlock Text="Роль" Classes="note" />
		<TextBlock Text="{Binding Group}" Classes="main" />
		<!-- <TextBlock Text="{x:Static l:Messages.AccessKey}" Classes="note" /> -->
		<TextBlock Text="Ключ доступа" Classes="note" />
		<TextBox Text="{Binding AccessToken}" IsReadOnly="True" Margin="0 -4 0 0" />
		<!-- <TextBox Classes="revealPasswordButton" Margin="0 -4 0 0"
			PasswordChar="*" Text="{Binding AccessToken}" IsReadOnly="True" /> -->
	</StackPanel>
</UserControl>
