<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:shared="using:DevSpector.Desktop.UI.Views.Shared"
	xmlns:ms="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
	xmlns:l="clr-namespace:DevSpector.Desktop.UI.Localization"
	x:Class="DevSpector.Desktop.UI.Views.UserInfoView">
	<StackPanel>
		<!-- <TextBlock Text="{x:Static l:Messages.Login}" Classes="note" /> -->
		<TextBlock
			Text="Логин"
			Classes="note"
			Margin="0" />
		<TextBlock
			Text="{Binding Login}"
			Classes="main" />
		<TextBlock
			Text="Роль"
			Classes="note"
			Margin="0" />
		<TextBlock
			Text="{Binding Group}"
			Classes="main" />
		<TextBlock
			Text="Ключ доступа"
			Classes="note" />
		<TextBox
			Classes="revealPasswordButton"
			PasswordChar="*"
			Text="{Binding AccessToken}"
			IsReadOnly="True" />
	</StackPanel>
</UserControl>
